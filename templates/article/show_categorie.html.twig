{% extends 'base.html.twig' %}

{% block title %}EXASPLOIT | {{ categorie.titre }} {% endblock %}

{% block body %}


    <!--test boucle article-->
    <section class="container-fluid mx-auto text-center">
        <div class="row mx-auto text-center d-flex justify-content-center align-items-start">

            {% for article in articles %}

                <div class="card col-12 col-sm-12 col-md-5 col-lg-4 col-xl-3 m-2 py-2 text-center" style="width: 18rem;">

                    <img src="{{ asset('assets/img/' ~ article.image) }}" loading="lazy" class="card-img-top media-img-show" alt="{{ article.titre }}">

                    <div class="card-body text-left">
                        <h5 class="card-title mb-2">{{ article.titre }}</h5>
                        <p class="card-text">{{ article.contenu | striptags | truncate(200) | raw }}</p>
                        <a href="{{ path('show_article', {'slug': article.slug} ) }}" class="btn btn-primary">VOIR L'ARTICLE</a>
                    </div>
                </div>

            {% endfor %}

        </div>
    </section>
    <!--test boucle article-->




{% endblock %}
